---
interface Props {
  title: string;
  description: string;
  href: string;
  ctaText?: string;
  icon?: 'video' | 'book' | 'users';
}

const { title, description, href, ctaText = "Explore" } = Astro.props;
---

<article class="pathway">
  <div class="pathway-content">
    <h3 class="pathway-title">{title}</h3>
    <p class="pathway-description">{description}</p>
  </div>
  <a href={href} class="pathway-link">
    {ctaText} â†’
  </a>
</article>

<style>
  .pathway {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-6) 0;
    border-bottom: 1px solid var(--border);
  }

  .pathway:first-child {
    padding-top: 0;
  }

  .pathway:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .pathway-content {
    flex: 1;
    max-width: 600px;
  }

  .pathway-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 var(--space-1);
    color: var(--text-primary);
  }

  .pathway-description {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .pathway-link {
    flex-shrink: 0;
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--text-primary);
    text-decoration: none;
    padding: var(--space-1) 0;
    border-bottom: 1px solid currentColor;
    transition: opacity 0.2s ease;
  }

  .pathway-link:hover {
    opacity: 0.7;
  }

  .pathway-link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
  }

  @media (max-width: 720px) {
    .pathway {
      flex-direction: column;
      gap: var(--space-2);
    }

    .pathway-link {
      align-self: flex-start;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .pathway-link {
      transition: none;
    }
  }
</style>
