---
interface Props {
  headline?: string;
  subheadline?: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  videoSrc?: string;
  videoPoster?: string;
  hasCaptions?: boolean;
}

const {
  headline = "Learn Web Development in Sign Language, Built for the Deaf Community",
  subheadline = "Bridging communication gaps. Empowering the next generation of Deaf tech leaders.",
  primaryCta = { text: "Start Learning", href: "/blog" },
  secondaryCta = { text: "Watch in Sign Language", href: "/blog" },
  videoSrc,
  videoPoster = "/conference.webp",
  hasCaptions = false,
} = Astro.props;

const showCaptionWarning = videoSrc && !hasCaptions;
---

<section class="hero" aria-label="Welcome">
  <div class="hero-background">
    {videoSrc && hasCaptions ? (
      <video
        class="hero-video"
        autoplay
        muted
        loop
        playsinline
        poster={videoPoster}
        aria-hidden="true"
      >
        <source src={videoSrc} type="video/mp4" />
      </video>
    ) : (
      <img
        class="hero-image"
        src={videoPoster}
        alt=""
        aria-hidden="true"
      />
    )}
    <div class="hero-overlay" aria-hidden="true"></div>
  </div>

  <div class="hero-content">
    {showCaptionWarning && (
      <div class="caption-warning" role="alert">
        <svg class="warning-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
          <line x1="12" y1="9" x2="12" y2="13"></line>
          <line x1="12" y1="17" x2="12.01" y2="17"></line>
        </svg>
        <span>Captions unavailable. <a href="/blog">View transcribed content instead</a></span>
      </div>
    )}

    <h1 class="hero-headline">{headline}</h1>
    <p class="hero-subheadline">{subheadline}</p>

    <div class="hero-ctas">
      <a href={primaryCta.href} class="cta-primary">
        {primaryCta.text}
        <svg class="cta-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
      <a href={secondaryCta.href} class="cta-secondary">
        {secondaryCta.text}
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin: -3em -1em 0;
    padding: 4rem 2rem;
  }

  @media (min-width: 720px) {
    .hero {
      margin: -3em calc(-50vw + 480px) 0;
      padding: 6rem 2rem;
    }
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-video,
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(11, 16, 33, 0.92) 0%,
      rgba(15, 52, 96, 0.85) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    text-align: center;
    color: #fff;
  }

  .caption-warning {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(245, 158, 11, 0.2);
    border: 1px solid rgba(245, 158, 11, 0.5);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    color: #FCD34D;
  }

  .caption-warning a {
    color: #FCD34D;
    text-decoration: underline;
    font-weight: 600;
  }

  .caption-warning a:hover {
    color: #FDE68A;
  }

  .warning-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .hero-headline {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
    color: #fff;
  }

  .hero-subheadline {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    margin: 0 0 2rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--accent-teal, #14B8A6);
    color: #fff;
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    border-radius: 12px;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
    box-shadow: 0 4px 20px rgba(20, 184, 166, 0.4);
  }

  .cta-primary:hover {
    background: var(--accent-teal-light, #2DD4BF);
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(20, 184, 166, 0.5);
    color: #fff;
  }

  .cta-primary:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px #0B1021, 0 0 0 4px #14B8A6;
  }

  .cta-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }

  .cta-primary:hover .cta-arrow {
    transform: translateX(4px);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background: transparent;
    color: #fff;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 12px;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .cta-secondary:hover {
    border-color: rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .cta-secondary:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px #0B1021, 0 0 0 4px #fff;
  }

  @media (max-width: 720px) {
    .hero {
      min-height: 60vh;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-primary,
    .cta-secondary {
      justify-content: center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .cta-primary,
    .cta-secondary,
    .cta-arrow {
      transition: none;
    }

    .hero-video {
      animation: none;
    }
  }
</style>

