---
interface Props {
  title: string;
  dateTime: string; // ISO 8601 format
  endDateTime?: string;
  location: string;
  isVirtual?: boolean;
  description?: string;
  imageUrl?: string;
  imageAlt?: string;
  ctaHref: string;
  ctaText?: string;
}

const {
  title,
  dateTime,
  endDateTime,
  location,
  isVirtual = false,
  description,
  imageUrl,
  imageAlt = "Event image",
  ctaHref,
  ctaText = "Register",
} = Astro.props;
---

<article class="event" data-event-start={dateTime} data-event-end={endDateTime}>
  <div class="event-content">
    <div class="event-meta">
      <span class="event-date-display">Loading...</span>
      <span class="event-divider">·</span>
      <span class="event-location">
        {isVirtual ? "Online Event" : location}
      </span>
    </div>

    <h3 class="event-title">{title}</h3>

    {description && <p class="event-description">{description}</p>}

    <a href={ctaHref} class="event-link" target="_blank" rel="noopener noreferrer">
      {ctaText} →
    </a>
  </div>

  {imageUrl && (
    <div class="event-image">
      <img src={imageUrl} alt={imageAlt} loading="lazy" />
    </div>
  )}
</article>

<style>
  .event {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-6);
    padding: var(--space-6) 0;
    border-bottom: 1px solid var(--border);
  }

  .event:first-child {
    padding-top: 0;
  }

  .event:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .event-content {
    flex: 1;
  }

  .event-meta {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: var(--space-2);
  }

  .event-divider {
    color: var(--text-muted);
  }

  .event-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 var(--space-2);
    line-height: 1.3;
    color: var(--text-primary);
  }

  .event-description {
    font-size: 1rem;
    color: var(--text-muted);
    margin: 0 0 var(--space-3);
    line-height: 1.6;
  }

  .event-link {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--text-primary);
    text-decoration: none;
    padding: var(--space-1) 0;
    border-bottom: 1px solid currentColor;
    transition: opacity 0.2s ease;
  }

  .event-link:hover {
    opacity: 0.7;
  }

  .event-link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
  }

  .event-image {
    flex-shrink: 0;
    width: 200px;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .event-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .event:hover .event-image img {
    filter: grayscale(0%);
  }

  @media (max-width: 720px) {
    .event {
      flex-direction: column-reverse;
      gap: var(--space-3);
    }

    .event-image {
      width: 100%;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .event-link,
    .event-image img {
      transition: none;
    }

    .event:hover .event-image img {
      filter: grayscale(100%);
    }
  }
</style>

<script>
  import { parseAndFormatEventDateTime } from '../helpers/dateTime.helper';

  const initEventCards = () => {
    const events = document.querySelectorAll('.event[data-event-start]');
    events.forEach((event) => {
      const startDateStr = event.getAttribute('data-event-start');
      const endDateStr = event.getAttribute('data-event-end');
      const dateDisplay = event.querySelector('.event-date-display');

      if (startDateStr && dateDisplay) {
        const { date, time } = parseAndFormatEventDateTime(startDateStr, endDateStr);
        dateDisplay.textContent = `${date} · ${time}`;
      }
    });
  };

  initEventCards();
  document.addEventListener('astro:page-load', initEventCards);
</script>
