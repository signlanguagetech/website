---
import HeaderLink from './HeaderLink.astro';
import Search from './Search.astro';
---

<header class='header' role="banner">
  <nav class='nav' aria-label="Primary navigation">
    <a class='nav-brand' href='/'>
      <span class='brand-text'>Sign Language Tech</span>
    </a>
    
    <button 
      class='menu-toggle' 
      aria-expanded="false" 
      aria-controls="nav-menu"
      aria-label="Toggle navigation menu"
    >
      <span class='menu-label'>Menu</span>
    </button>
    
    <div class='nav-menu' id="nav-menu">
      <div class='nav-links'>
        <HeaderLink href='/blog'>Watch in Sign Language</HeaderLink>
        <HeaderLink href='/glossary'>Learn Terms</HeaderLink>
        <HeaderLink href='/about'>Meet the Team</HeaderLink>
      </div>
      <Search />
    </div>
  </nav>
</header>

<script>
  const toggle = document.querySelector('.menu-toggle');
  const menu = document.querySelector('.nav-menu');
  
  toggle?.addEventListener('click', () => {
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', (!expanded).toString());
    menu?.classList.toggle('is-open');
    document.body.style.overflow = expanded ? '' : 'hidden';
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && menu?.classList.contains('is-open')) {
      toggle?.setAttribute('aria-expanded', 'false');
      menu?.classList.remove('is-open');
      document.body.style.overflow = '';
    }
  });
</script>

<style>
  .header {
    padding: 0 var(--space-2);
    background: var(--bg-base);
    border-bottom: 1px solid var(--border);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--content-wide);
    margin: 0 auto;
    min-height: 72px;
  }

  .nav-brand {
    text-decoration: none;
    color: var(--text-primary);
  }

  .brand-text {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .menu-toggle {
    display: none;
    padding: var(--space-1) var(--space-2);
    background: transparent;
    border: 1px solid var(--border);
    color: var(--text-primary);
    font-family: inherit;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
  }

  .menu-toggle:hover {
    background: var(--bg-surface);
  }

  .menu-label {
    display: block;
  }

  .nav-menu {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .nav-links {
    display: flex;
    gap: var(--space-4);
  }

  .nav-links :global(a) {
    padding: var(--space-3) 0;
    font-size: 0.9375rem;
    text-decoration: none;
    color: var(--text-primary);
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .nav-links :global(a:hover) {
    opacity: 1;
    border-bottom-color: var(--text-primary);
  }

  .nav-links :global(a.active) {
    border-bottom-color: var(--text-primary);
  }

  @media (max-width: 720px) {
    .menu-toggle {
      display: block;
    }

    .nav-menu {
      display: none;
      position: fixed;
      top: 73px;
      left: 0;
      right: 0;
      bottom: 0;
      flex-direction: column;
      align-items: stretch;
      padding: var(--space-4);
      background: var(--bg-base);
      border-top: 1px solid var(--border);
      z-index: 100;
    }

    .nav-menu.is-open {
      display: flex;
    }

    .nav-links {
      flex-direction: column;
      gap: 0;
    }

    .nav-links :global(a) {
      padding: var(--space-3) 0;
      border-bottom: 1px solid var(--border);
    }

    .nav-links :global(a:last-child) {
      border-bottom: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-links :global(a) {
      transition: none;
    }
  }
</style>
